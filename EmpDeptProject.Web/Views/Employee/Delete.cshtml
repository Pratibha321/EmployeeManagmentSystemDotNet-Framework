@model EmpDeptProject.Models.Models.Employee
@{
    ViewData["Title"] = "Delete";
}


<form method="post" asp-action="Delete">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-info">Delete Category</h2>
            <hr />

        </div>
        <div asp-validation-summary="All" class="text-danger"></div>@*//iside div only it works*@
        <div class="mb-3 ">
            <label asp-for="EmpName"></label>
            <input asp-for="EmpName" disabled class="form-control" />


        </div>

        <div class="mb-3 ">
            <label asp-for="EmpSalary"></label>
            <input asp-for="EmpSalary" disabled class="form-control" />

        </div>

        <div class="mb-3 ">
            <label asp-for="DeptId"></label>
            <input asp-for="DeptId" disabled type="number" class="form-control " />
        </div>

        <button type="submit" class="btn btn-success" style="width:100px">Delete</button>
        <a asp-controller="Employee" asp-action="Index" class="btn btn-primary">Back</a>
    </div>
</form>


