@model EmpDeptProject.Models.Models.Employee
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit View</h1>


<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-info">Edit Employee</h2>
            <hr />

        </div>
        <div asp-validation-summary="All" class="text-danger"></div>@*//iside div only it works*@
        <div class="mb-3 ">
            <label asp-for="EmpId"></label>
            <input asp-for="EmpId" readonly class="form-control" />

            <span asp-validation-for="EmpName" class="text-danger"></span>
            <label asp-for="EmpName"></label>
            <input asp-for="EmpName" class="form-control" />
            <span asp-validation-for="EmpName" class="text-danger"></span>
            @*  @Html.ValidationMessageFor(m=>m.CategoryName,"Name can not be more than 20 character");
            *@
        </div>

        <div class="mb-3 ">
            <label asp-for="EmpSalary"></label>
            <input asp-for="EmpSalary" class="form-control" />
            <span asp-validation-for="EmpSalary" class="text-danger"></span>
        </div>

        <div>
            @Html.LabelFor(model => model.Departments.DeptName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col md-10">
                @Html.DropDownListFor(model=>model.DeptId,(SelectList)ViewBag.DeptId,new{@class="form-control"})
            </div>
        </div>


       

        <button type="submit" class="btn btn-success" style="width:100px">Update</button>
        <a asp-controller="Employee" asp-action="Index" class="btn btn-primary">Back</a>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />@*//partial is element tag helper*@
}



